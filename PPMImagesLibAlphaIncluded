local PPMImages = {}
local MainString = ""
local Alpha = 0
function PPMImages.StartPPMFile(SizeX,SizeY,AlphaIn)
local RequiredPixels = SizeX * SizeY
MainString = MainString .. "P3\n" .. tostring(SizeX) .. "\n" .. tostring(SizeY) .. "\n" .. tostring(AlphaIn)
Alpha = AlphaIn
return RequiredPixels
end
function PPMImages.AddPixel(R,G,B)
if R > Alpha then R = Alpha end
if G > Alpha then G = Alpha end
if B > Alpha then B = Alpha end
MainString = MainString .. "\n" .. tostring(R) .. " " .. tostring(G) .. " " .. tostring(B)
end
function PPMImages.Finish(FileName)
writefile(tostring(FileName) .. ".ppm",MainString)
end

return PPMImages
